<Window x:Class="LaptopLoadTool.GetUserinput"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LaptopLoadTool"
        mc:Ignorable="d" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen"
        Title="Custom Input" Height="150" Width="350" Background="Black">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10">
            <Label x:Name="labelPrompt" Foreground="White" FontWeight="Bold" Margin="-5,0,0,0">Enter desired workflow</Label>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBox x:Name="userInputBox" Width="250" KeyDown="Event_KeyDown" FontWeight="Bold"/>
            </StackPanel>
            <Button x:Name="confirmButton" Click="OnConfirmButtonClick" Margin="0,5,0,0" Height="20" Width="70">Confirm</Button>
        </StackPanel>
    </Grid>
</Window>